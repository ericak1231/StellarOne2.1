<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE task PUBLIC "-//OASIS//DTD DITA Task//EN" "task.dtd">
<task id="task_qmn_hp4_pvb">
    <title>Edit Exception Path</title>
    <taskbody>
        <steps>
            <step>
                <cmd>Go to <menucascade>
                        <uicontrol>Agents</uicontrol>
                        <uicontrol>All</uicontrol>
                    </menucascade>.</cmd>
            </step>
            <step>
                <cmd><ph conkeyref="PRODvars/POLICY"/></cmd>
                <info>
                    <note id="note_kqb_dvc_jvb">
                        <p><ph conkeyref="PRODvars/POLICY_NOTE"/></p>
                    </note>
                </info>
            </step>
            <step>
                <cmd>Find the <uicontrol>Exception Paths</uicontrol> section from the
                        <wintitle>Exclusions</wintitle> pane.</cmd>
            </step>
            <step>
                <cmd>Check the check box next to the exception path you want to edit.</cmd>
            </step>
            <step>
                <cmd>Click the <uicontrol>Edit</uicontrol> button and the <uicontrol>Add Exception
                        Path</uicontrol> dialog window will appear.</cmd>
            </step>
            <step>
                <cmd>After modification, click the <uicontrol>Save</uicontrol> button to save the
                    settings.</cmd>
            </step>
        </steps>
    </taskbody>
</task>
